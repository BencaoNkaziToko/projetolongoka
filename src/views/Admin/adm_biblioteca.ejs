            <div class="row">
                <div class="col-12">
                    <div class="bg-dark p-5 mb-5">
                        <div class="row no-gutters">
                            <div class="col-xl-6 border-right border-lg-0 pr-0 pr-xl-5">
                                <h4 class="text-white add-letter-space">Adicionar obra</h4>
                                <form class="row g-3 needs-validation" novalidate action="/adm_add_livro" method="post" enctype="multipart/form-data" id="uploadForm">
                                    <div class="col-12">
                                      <input type="text" name="titulo" class="form-control bg-transparent shadow-none rounded-0" placeholder="Título da obra..." required>
                                      <div class="invalid-feedback">Por favor, escreva um título para a obra!</div>
                                    </div>
                
                
                                    <div class="col-6">
                                        <input type="text" name="autor" class="form-control bg-transparent shadow-none rounded-0" placeholder="Autor da obra..." required>
                                        <div class="invalid-feedback">Por favor, o autor da obra!</div>
                                    </div>
                                    <div class="col-6">
                                       <select class="custom-select bg-transparent rounded-0 text-white shadow-none" id="pick-lang" name="categoria">
                                            <% categorias.forEach((categoria) => { %>
                                                 <option class="bg-dark text-light" value="<%=categoria.id %>"><%=categoria.nome %></option>
                                            <% }) %>
                                          </select>
                                       </select>
                                    </div>
                                    
                                    <div class="col-12 mt-2">
                                        <input type="file" name="userFile" class="form-control bg-transparent shadow-none rounded-0" placeholder="Site oficial da instituição(opcional)" >
                                        <div class="invalid-feedback">Por favor, carregar o ficheiro pdf!</div>
                                    </div>
                                    <div class="col-12 my-2">
                                      <button class="btn btn-primary w-100" type="submit">Adicionar obra <i class="fas fa-plus"></i></button>
                                    </div>
                                  </form>
                            </div>
                            <div class="col-xl-6 pl-0 pl-xl-5 mt-4 mt-xl-0">
                                <div class="categores-links text-capitalize">
                                    <h3 class="text-white add-letter-space mb-3">Total de obras divulgadas: <%=total %></h3>
                                    <% categorias.forEach((categoria) => { %>
                                        <a class="border" href="#!"><%=categoria.nome %></a>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-between">
    <div class="col-lg-7">
             
        
        
        
    </div>
    <div class="col-lg-5">       
        
    </div>
</div>
</div>

        <!-- start of footer -->
<footer class="bg-dark">
    <div class="container">
        <div class="row text-center container" style="max-height: 200px; overflow: auto">
            <table class="table text-center text-white table-transparent">
                <thead class="bg-dark">
                    <tr>
                        <th class="h3" scope="col">Titulo</th>
                        <th class="h3" scope="col">Autor</th>
                        <th class="h3" scope="col">Categoria</th>
                        <th class="h3" scope="col">Acção</th>
                    </tr>
                </thead>
                <tbody>
                    <% livros.forEach((livro) =>  { %>
                        <tr>
                            <td><%=livro.titulo %></td>
                            <td><%=livro.autor %></td>
                            <td><%=livro.nome %></td>
                            <td>
                                <a href="/adm_elim_livro/<%=livro.idMaterial %>"><i class="text-primary fas fa-trash"></i></a>
                                <span class="mr-5"></span>
                                <a href="/adm_edit_livro/<%=livro.idMaterial %>"><i class="text-warning fas fa-edit"></i></a>
                                <span class="mr-5"></span>
                                <a href="./uploads/<%=livro.caminho %>" download="<%=livro.titulo %> - <%=livro.autor %>.pdf"><i class="text-success fas fa-arrow-down"></i></a>
                                
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</footer>
<!-- end of footer -->
