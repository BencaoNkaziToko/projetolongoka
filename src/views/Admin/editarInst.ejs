            <div class="row">
                <div class="col-12">
                    <div class="bg-dark p-5 mb-5">
                        <div class="row no-gutters">
                            <div class="col-xl-6 border-right border-lg-0 pr-0 pr-xl-5">
                                <h4 class="text-white add-letter-space text-center">Alterar dados da Instituição: "<%= instituicao[0].nomeInstituicao %>"</h4><br>
                                <form class="row g-3 needs-validation" novalidate action="/admSaveedit_Inst" method="post">
                                    <div class="col-6">
                                        <input type="text" name="idInstituicao" class="d-none form-control bg-transparent shadow-none rounded-0" value="<%= instituicao[0].idInstituicao %>">
                                      
                                        <input type="text" name="nomeInstituicao" class="form-control bg-transparent shadow-none rounded-0" value="<%= instituicao[0].nomeInstituicao %>" placeholder="Nome da instituição..." required>
                                      <div class="invalid-feedback">Por favor, escreva um título para a obra!</div>
                                    </div>
                
                                    <div class="col-6">
                                        <input type="text" name="sigla_acronomo" class="form-control bg-transparent shadow-none rounded-0" value="<%= instituicao[0].sigla_acronomo %>" placeholder="sigla ou acronomo..." required>
                                        <div class="invalid-feedback">Por favor, a sigla ou acronomo da instituição!</div>
                                    </div>
                                    <div class="col-6 mt-2">
                                        <select class="custom-select bg-transparent rounded-0 text-white shadow-none" id="pick-lang" name="tipo" required>
                                          <option value="<%= instituicao[0].tipo %>" class="bg-dark text-warning">Escolher Natureza</option>
                                          <option value="Pública" class="bg-dark text-warning">Instituição pública</option>
                                          <option class="bg-dark text-"  value="Privada">Instituição privada</option>
                                       </select>
                                    </div>
                                    <div class="col-6 mt-2">
                                    <select class="custom-select bg-transparent rounded-0 text-white shadow-none" id="pick-lang" name="idprovincia">
                                        
                                        <option value="<%= provincias[0].id %>" class="bg-dark text-light">Escolher Província</option>
                                        <% provincias.forEach((provincias) => { %>  
                                            <option value="<%= provincias.id %>" class="bg-dark text-light"><%= provincias.nomeProvincia %></option>
                                        <% }) %> 
                                    </select>
                                    </div>  
                                    <div class="col-6 mt-2">
                                        <input type="text" name="endereco" class="form-control bg-transparent shadow-none rounded-0" value="<%= instituicao[0].endereco %>" placeholder="Endereço da instituição..." required>
                                        <div class="invalid-feedback">Por favor, escreva o endereço</div>
                                    </div>
                                    <div class="col-6 mt-2">
                                        <input type="text" name="site" class="form-control bg-transparent shadow-none rounded-0" value="<%= instituicao[0].site_oficial %>" placeholder="Site oficial da instituição(opcional)" >
                                        
                                    </div>
                                    <div class="col-6 mt-2">
                                        <input type="text" name="telefone" class="form-control bg-transparent shadow-none rounded-0" value="<%= instituicao[0].telefone1 %>" placeholder="Telefone...">
                                        <div class="invalid-feedback">Por favor, escreva o número de telefone!</div>
                                    </div>
                                    <div class="col-6 my-2">
                                      <button class="btn btn-warning w-100" type="submit">Alterar dados<i class="fas fa-edit"></i></button>
                                    </div>
                                  </form>
