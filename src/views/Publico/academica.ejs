  <script>
    const questions = [
      {
        question: "Gosta de resolver problemas práticos?",
        answers: {
          yes: ["Engenharia Informática", "Medicina", "Arquitetura", "Gastronomia", "Engenharia Civil", "Ciência da computação", "Engenharia Civil", "Arquitetura"],
          no: []
        }
      },
      {
        question: "Interessa-se por matemática e física?",
        answers: {
          yes: ["Ciência da computação", "Matemática", "Física"],
          no: []
        }
      },
      {
        question: "Gosta de liderar e organizar atividades?",
        answers: {
          yes: ["Administração", "Gestão de Empresas", "Gestão de Recursos Humanos"],
          no: []
        }
      },
      {
        question: "Interessa-se por gestão e estratégia de negócios?",
        answers: {
          yes: ["Administração", "Gestão de Empresas", "Marketing Empresarial"],
          no: []
        }
      },
      // Adicione mais perguntas conforme necessário
    ];

    let currentQuestionIndex = 0;
    let compatibleCourses = [];

    function startAssessment() {
      showQuestionModal();
    }

    function showQuestionModal() {
      const modal = document.getElementById("questionModal");
      const questionTitle = document.getElementById("questionTitle");
      const questionForm = document.getElementById("questionForm");
      const currentQuestion = questions[currentQuestionIndex];

      questionTitle.textContent = currentQuestion.question;
      questionForm.reset();
      modal.style.display = "block";
    }

    function closeQuestionModal() {
      const modal = document.getElementById("questionModal");
      modal.style.display = "none";
    }

    function submitAnswer() {
      const answer = document.querySelector('input[name="answer"]:checked').value;
      const currentQuestion = questions[currentQuestionIndex];

      if (answer === "yes") {
        compatibleCourses = compatibleCourses.concat(currentQuestion.answers.yes);
      }

      currentQuestionIndex++;
      if (currentQuestionIndex < questions.length) {
        showQuestionModal();
      } else {
        closeQuestionModal();
        showResultModal();
      }
    }

    function showResultModal() {
      const modal = document.getElementById("resultModal");
      const courseList = document.getElementById("compatibleCourses");
      courseList.innerHTML = "";

      const uniqueCourses = Array.from(new Set(compatibleCourses));
      uniqueCourses.forEach(course => {
        const listItem = document.createElement("li");
        listItem.textContent = course;
        courseList.appendChild(listItem);
      });

      modal.style.display = "block";
    }

    function closeResultModal() {
      const modal = document.getElementById("resultModal");
      modal.style.display = "none";
    }

    window.onclick = function(event) {
      const questionModal = document.getElementById("questionModal");
      const resultModal = document.getElementById("resultModal");

      if (event.target == questionModal) {
        questionModal.style.display = "none";
      }
      if (event.target == resultModal) {
        resultModal.style.display = "none";
      }
    }
  </script>

